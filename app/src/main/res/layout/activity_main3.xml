<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/attitudestatus"
    tools:context=".Main3Activity">

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/action_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="96dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        app:floating_background_color="@color/color_action"
        app:floating_left_icon="@drawable/ic_chevron_left_black_24dp"
        app:floating_title_color="@android:color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="336dp" />

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/action_button_share_attitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="118dp"
        app:floating_background_color="@color/color_action"
        app:floating_left_icon="@drawable/ic_share_black_24dp"
        app:floating_title_color="@android:color/black"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="336dp" />

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/action_button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/action_button_left"
        android:layout_gravity="center"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        app:floating_background_color="@color/color_action"
        app:floating_left_icon="@drawable/ic_chevron_right_black_24dp"
        app:floating_title_color="@android:color/black"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="336dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="19sp"
        android:textColor="@color/color_action"
        android:shadowColor="@color/color_action"
        android:text="TextView" />


</RelativeLayout>